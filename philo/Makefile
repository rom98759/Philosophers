# =============================================================================
# üåü GENERAL CONFIG & FLAGS üåü
# =============================================================================

CC := cc
CFLAGS := -Wall -Wextra -Werror -pthread -g
INCLUDES := -Iincludes
NAME := philo

# =============================================================================
# üìÇ SOURCES & OBJECTS üìÇ
# =============================================================================

SRCS := srcs/philosophers.c \
	srcs/utils.c \
	srcs/parsing.c \
	srcs/inits.c \
	srcs/threads_utils.c \
	srcs/philo_threads.c \
	srcs/game_master.c

OBJ_DIR := objs/
OBJ := $(SRCS:srcs/%.c=$(OBJ_DIR)/%.o)

# =============================================================================
# üèóÔ∏è RULES üèóÔ∏è
# =============================================================================

all: $(NAME)
	@echo "Compilation of $(NAME) : \033[1;32mOK\033[0m"

$(NAME): $(OBJ)
	@$(CC) $(CFLAGS) $(INCLUDES) $(OBJ) -o $(NAME)

$(OBJ_DIR)/%.o: srcs/%.c
	@mkdir -p $(@D)
	@$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

# =============================================================================
# CLEANING RULES
# =============================================================================

clean:
	@rm -rf $(OBJ_DIR)
	@echo "Clean de $(NAME) : \033[1;32mOK\033[0m"

fclean: clean
	@rm -f $(NAME)
	@echo "Fclean de $(NAME) : \033[1;32mOK\033[0m"

re: fclean all

# =============================================================================
# üéÖ EASTER EGG RULES üéÑ
# =============================================================================

noel:
	@echo "üéÑ Joyeux No√´l √† tous ! üéÖ"
	@$(MAKE) -s sapin taille=$(taille)

# =============================================================================
# üéÑ R√àGLE POUR DESSINER UN SAPIN üéÑ
# =============================================================================

taille ?= 3

sapin:
	@echo "Voici ton sapin de No√´l de taille $(taille) :"
	@for i in $(shell seq 1 $(taille)); do \
		nb_etoiles=$$(($$i * 2 - 1)); \
		nb_espaces=$$(($(taille) - $$i)); \
		printf "%*s" $$nb_espaces ""; \
		for j in $(shell seq 1 $$nb_etoiles); do \
			printf "*"; \
		done; \
		printf "\n"; \
	done; \
	printf "%*s" $$(($(taille) - 1)) ""; \
	echo "|";

# =============================================================================
# üíº PHONY RULES üíº
# =============================================================================

.PHONY: all clean fclean re noel sapin
